-if !session[:token].nil? && !session[:vk_id].nil?
	%legend Аккаунт VKontakte
	%div.boxgrid2
		%div.boxgrid.captionfull
			%img{src: "#{@photo[0]}", class: 'img-rounded'}
		%div{style: "display:table-cell;vertical-align:middle;height:50px;"}
		
			%div
				%strong
					= @first_name[0]
					= @last_name[0]
				%div{:style => "font:normal 11px Arial;"}
					= @nickname[0]
			%div
				%strong
					ID:
				= @uid[0]
		