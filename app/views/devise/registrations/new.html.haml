%h1
	Регистрация

=form_for(resource, :as => resource_name, :html => {:class => 'form-horizontal'} , :url => registration_path(resource_name)) do |f|
	= devise_error_messages!

	%legend Панель регистрации
	%div.control-group
		= f.label t('authorization.sign_up.username'), class: 'control-label', for: 'inputUsername'
		%div.controls
			= f.text_field :username, id: 'inputUsername', placeholder: 'Логин'

	%div.control-group
		= f.label t('authorization.sign_up.email'), class: 'control-label', for: 'inputEmail'
		%div.controls
			= f.email_field :email, id: 'inputEmail', placeholder: 'Email'

	%div.control-group
		= f.label t('authorization.sign_up.password'), class: 'control-label', for: 'inputPassword'
		%div.controls
			= f.password_field :password, id: 'inputPassword', placeholder: 'Пароль'

	%div.control-group
		= f.label t('authorization.sign_up.password_confirmation'), class: 'control-label', for: 'inputPasswordConfirmation'
		%div.controls
			= f.password_field :password_confirmation, id: 'inputPasswordConfirmation', placeholder: 'Повторение пароля'

	%div.control-group
		= f.label t('authorization.sign_up.country'), class: 'control-label', for: 'inputCountry'
		%div.controls
			= f.country_select :country, ["Ukraine", "Russian Federation" ]

	%div.control-group
		= f.label t('authorization.sign_up.avatar'), class: 'control-label', for: 'inputAvatar'
		%div.controls
			= f.file_field :avatar, id: 'inputAvatar'

	%div.control-group
		%div.controls
			= f.submit t('authorization.sign_up.sign_up'), class: 'btn'

	%div
		= render "devise/shared/links"