%h1 Изменить пароль
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f|

	%legend Восстановление пароля

	%div.control-group
		= f.label t('authorization.sign_up.password'), class: 'control-label', for: 'inputPassword'
		%div.controls
			= f.password_field :password, id: 'inputPassword', placeholder: 'Пароль'

	%div.control-group
		%div.controls
			= f.submit t('authorization.reset_password.send'), class: 'btn'

	= render "devise/shared/links"

