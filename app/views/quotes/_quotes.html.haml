%blockquote
	%p
		= quote.content
	%small
		= quote.author
	%h6
		поделился
		= quote.user.username
		= quote.created_at.in_time_zone('Kyiv').strftime("%m.%d.%Y %H:%M")
		| Категория:
		= link_to quote.section.title, section_quotes_path(quote.section), :rel => 'tooltip', :title => "Цитат в категории: #{@q_count_cat}", :"data-placement" => 'right'
	= link_to "Подробнее", section_quote_path(quote.section, quote.id)