%h6
	поделился
	= quote.user.username
	= quote.created_at.in_time_zone('Kyiv').strftime("%m.%d.%Y %H:%M")
%div.hero-unit
	%p
		= quote.content
	%blockquote
		%small
			= quote.author
	-if current_user.nil?
		%div.alert.alert-error
			%button{:type => "button", :class => "close", :"data-dismiss" => "alert"}
				×
			%h4 Ошибка!
			Вы неавторизированы!
	-else
		-if !session[:vk_id].nil?
			%div.btn.btn-small.btn-primary{:onclick=>"sendwallpost('#{quote.content} - #{quote.author}', #{session[:vk_id]});"}
				Добавить на стену
		-else
			%div.alert.alert-error
				%button{:type => "button", :class => "close", :"data-dismiss" => "alert"}
					×
				%h4 Ошибка!
				Вы неавторизированы ВКонтакте!			



%legend{style: 'margin-bottom: 5px;'} Понравилась цитата?

%ul.unstyled
	%li
		= link_to 'Поделиться ВКонтакте','http://vk.com/share.php?url='+section_quote_path(quote.section, quote.id, :only_path => false), :target => '_blank'
	%li
		= link_to 'Поделиться в Одноклассниках','http://www.odnoklassniki.ru/dk?st.cmd=addShare&st._surl='+section_quote_path(quote.section, quote.id, :only_path => false), :target => '_blank'
	%li
		= link_to 'Поделиться в Facebook','http://www.facebook.com/login.php?next='+section_quote_path(quote.section, quote.id, :only_path => false), :target => '_blank'

